

  {{#if posts.length}}
    {{#each posts as |post|}}
    <section class="dashboard-post">
      <h4><a href="/dashboard/edit/{{id}}">{{title}}</a></h4>
      <p class="dashboard-date">{{format_date created_At}}</p>
    </section>
    {{/each}}
  {{/if}}

  <footer>
    <a href="/dashboard/new">New Post</a>
  </footer>

